script Bali;

macro Proc
  LeftOfLine;
  InsertText("procedure ");
  SetBlockBeg; 
  RightOfLine;
  SetBlockEnd;
  InsertText("\nbegin\n\nend; { ");
  CopyBlock;
  RightOfLine;
  InsertText(" }\n");
  CursorUp;
  CursorUp;
  CursorUp;
  CursorUp;
  RightOfLine;
  ToggleHideBlock;
  FixScreenPos;
end;

